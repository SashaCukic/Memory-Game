{# COMPONSANT - Memory card #}
<div class="col-md-2 flip-card" data-value="{{ card }}">
    <div class="flip-card-inner">
        <div class="flip-card-front">
            <img src="{{ asset('build/images/oclock.svg') }}" alt="Logo card back" class="img-fluid">
        </div>
        <div class="flip-card-back">
            <img src="{{ asset('build/images/' ~ card ~ '.svg') }}" alt="Logo {{ card }}" class="img-fluid">
        </div>
    </div>
</div>